@using Microsoft.Extensions.Configuration
@inject IJSRuntime JSRuntime
@inject IConfiguration Configuration
<Menu Style="background: #161b22;" Mode="MenuMode.Horizontal">
    <MenuItem Class="header-menu-item-hover" Key="index">
        <Icon Class="header-icon" Type="tablet" Theme="outline" />
        <NavLink class="header-text-color" href="/" Match="NavLinkMatch.All">首頁</NavLink>
    </MenuItem>
    <MenuItem OnClick="navToGitHub" Class="header-menu-item-hover" Key="index">
        <Icon Class="header-icon" Type="github" Theme="outline" />
        <NavLink class="header-text-color" Match="NavLinkMatch.All">GitHub</NavLink>
    </MenuItem>
</Menu>

<style>
    .ant-layout > .ant-header > .ant-menu > .ant-menu-item .header-icon {
        font-size: 24px;
        color: aliceblue;
    }

    .ant-layout > .ant-header > .ant-menu > .header-menu-item-hover:hover .header-icon {
            color: #161b22;
        }

    .ant-layout > .ant-header > .ant-menu > .ant-menu-item .header-text-color {
        color: aliceblue;
    }

    .ant-layout > .ant-header > .ant-menu > .ant-menu-item .header-text-color:hover {
        color: #161b22;
    }

    .ant-layout > .ant-header > .ant-menu > .header-menu-item-hover:hover {
        margin: 0;
        padding: 0 20px;
        background-color: rgb(157, 175, 203);
    }
</style>


@code {

    private async Task navToGitHub()
    {
        await JSRuntime.InvokeAsync<object>("open", Configuration["GithubPath"], "_blank");
    }


}